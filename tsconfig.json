{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "lib": ["es2015", "es2017", "dom"],
    "outDir": "./dist",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictPropertyInitialization": true,
    "removeComments": false,
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
